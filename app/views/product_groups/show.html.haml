%h2
  = t(:show)
  = t(:product_group)
%p
  %b
    = t(:product_group_id) + ":"
  = @product_group.product_group_id
%p
  %b
    = t(:name) + ":"
  = @product_group.name
%p
  %b
    = t(:description) + ":"
  = @product_group.description
%p
  %b
    = t(:link) + ":"
  = @product_group.link
%p
  %b
    = t(:picture) + ":"
  = image_tag @product_group.main_picture.url
%p
  %b
    = t(:picture) + ":"
  = image_tag @product_group.extra_picture.url
= link_to t(:edit), edit_product_group_path(@product_group), :class => "btn"
= link_to t(:back), product_groups_path, :class => "btn"
