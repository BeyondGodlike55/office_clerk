.row
  .large-9.column
    .row
      .large-8.column
        %h2
          = t(:clerks)
      .large-4.column
        = link_to  t(:new) + ' ' + t(:clerk) , new_clerk_path , :class => "admin-button"
    .row
      %p
        = paginate @clerks
  .large-3.column
    = image_tag "admin/clerks.jpg"
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th=sort_link @q, :email
            %th{column_style("clerk", "address")}
              =t(:address)
            %th{:colspan => "2"}
              %label.checkbox
                = @clerk_scope.count.to_s + " " + t(:clerk)
        %tbody
          - @clerks.each do |clerk|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("clerk", "email")}
                =clerk.email
              %td{column_style("clerk", "address")}
                =clerk.whole_address
              %td= link_to t(:show) , clerk_path(clerk), :title => t(:show)
              %td= link_to t(:edit), edit_clerk_path(clerk), :title => t(:edit)
  .medium-3.columns
    = search_form_for @q, :url => search_clerks_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = f.facet_for(:email , :label => t(:email))
      = f.facet_for(:address , :label => t(:address))
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), clerks_path, :class => "admin-button"
