%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %title Auringosta Itään, Kuusta Länteen - Cinnamon Apple Spices
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1", name: "viewport"}
    %meta{content: "Sisustus, Lifestyle, luomukosmetiikka , luonnonkosmetiikka , farfalla", name: "keywords"}
    = stylesheet_link_tag "shop"
    = javascript_include_tag "shop"
    = csrf_meta_tags
  %body
    %header.row.mainrow
      .logo.column.large-12
        .row
          .medium-8.columns
          .medium-4.columns
            %nav.top-bar{"data-topbar" => ""}
              %ul.title-area
                %li.name
              %section.top-bar-section
                %ul.right
                  %li#link-to-cart
                    %a{href: "/cart"}
                      = t(:basket)
                      = t(:empty)
                  %li.has-dropdown
                    %a{:href => "#"} 
                      = current_clerk ? current_clerk.email : "Login"
                    %ul.dropdown
                      - if current_clerk
                        %li= link_to t(:sign_out), sign_out_path
                      - else
                        %li= link_to t(:sign_up), sign_up_path
                        %li= link_to t(:sign_in), sign_in_path
    .row.content
      .large-12.column.alert
        - if not flash[:notice].blank? then
          .alert-notice.row
            .large-3.column
              .alert-heading= t(:info) + " :"
            .large-9.column
              .alert-message!= flash[:notice]
      .large-12.column.alert
        - if not flash[:error].blank? then
          .alert-error.row
            .large-3.column
              .alert-heading= t(:info) + " :"
            .large-9.column
              .alert-message!= flash[:notice]
      

    .row
      .large-12.columns
        = yield


