<h2><%= t(:treeview, :default => 'Treeview') %> <%= t('app.models.Purchase.bs_caption', :default => 'Purchase') %></h2>

<%
namespace_for_url = ""
plural_model_name = "Purchases"
model_name        = "Purchase"
opened_node       = Purchase.select(:id).all.map{ |g| "'treeelt_" + g.id.to_s + "'" }.join(',').html_safe
%>

<div id="treeview" data-model="<%= model_name %>" data-url="/<%= namespace_for_url %><%= plural_model_name %>/" data-opened="[<%= opened_node %>]">
  <ul>
    <% Purchase.transaction do %>
    <% ar = Purchase.where(:Purchase_id => nil) %>
    <% ar = ar.order("position") if Purchase.column_names.include?("position") %>
      <% for g in ar.all %>
        <%= build_treeview(g, 'Purchases') %>
      <% end %>
    <% end %>
  </ul>
</div>

