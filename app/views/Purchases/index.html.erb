<h2><%= t(:listing, :default => "Listing") %> <%= t('app.models.purchase.bs_caption_plural', :default => 'Purchase') %></h2>

<p>
  <%= link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.purchase.bs_caption', :default => 'Purchase'), new_purchase_path, :class => "btn" %>
  <% if Purchase.columns.map(&:name).include?("purchasease_id") then %>
    <%= link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.purchase.bs_caption', :default => 'Purchase'), treeview_purchases_path, :class => "btn" %>
  <% end %>
</p>

<%= render :partial => "layouts/mass_inserting", :locals => { :namespace => '', :model_name => 'Purchase', :model_columns => ['name','ordered_on','received_on','bucket','supplier'] } %>

<%# Set your scopes below (string in array) %>
<% scopes = [] %>
<% if not scopes.blank? then %>
<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "All (#{@Purchase_scope_for_scope.count})", purchases_path(:scope => ""), :class => "btn #{((session[:scope][:purchase].to_s == '') ? 'active' : '')}" %>
    <% for scope in scopes %>
    <%= link_to "#{scope} (#{@Purchase_scope_for_scope.send(scope).count})", purchases_path(:scope => scope), :class => "btn #{((session[:scope][:purchase].to_s == scope) ? 'active' : '')}" %>
    <% end %>
  </div>
</div>
<% end %>

<div class="row-fluid">
  <div class="span9">
    <%= form_tag  batch_purchases_path, :class => "form-inline" do %>
      <div class="well well-small">
        <label class="control-label" for="select01"><%= t(:batch, :default => "Batch") %></label>

        <select id="select01" name="actionprocess">
          <option value="destroy"><%= t(:destroy, :default => "Destroy") %></option>
          
          <!-- Beautiful_scaffold - AddField - Batch - Do not remove -->
        </select>
        <button class="btn" type="submit"><i class="icon-ok"></i> <%= t(:process, :default => "Process") %></button>
      </div>

      <%= render :partial => "layouts/modal_columns", :locals => { :model_name => "purchasease", :model_columns => ['name','ordered_on','received_on','bucket','supplier','created_at','updated_at'] } %>

      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>
              <a class="" data-toggle="modal" href="#modal-columns" title="<%= t(:select_columns, :default => "Select Columns") %>" ><i class="icon-th-list"></i></a>
            </th>
            <th>
              <%= check_box_tag :checkall, '' %>
            </th>
            <th <%= visible_column("purchasease", "name") %> class="col-name">
  <%= sorting_header("purchasease", "name", "") %>
</th>
<th <%= visible_column("purchasease", "ordered_on") %> class="col-ordered_on">
  <%= sorting_header("purchasease", "ordered_on", "") %>
</th>
<th <%= visible_column("purchasease", "received_on") %> class="col-received_on">
  <%= sorting_header("purchasease", "received_on", "") %>
</th>
<th <%= visible_column("purchasease", "bucket") %> class="col-bucket">
  <%= sorting_header("purchasease", "bucket", "") %>
</th>
<th <%= visible_column("purchasease", "supplier") %> class="col-supplier">
  <%= sorting_header("purchasease", "supplier", "") %>
</th>

            <!-- Beautiful_scaffold - AddField - Header - Do not remove -->
            <th <%= visible_column("purchasease", "created_at") %> class="col-created_at">
              <%= sorting_header("purchasease", "created_at", "") %>
            </th>
            <th <%= visible_column("purchasease", "updated_at") %> class="col-updated_at">
              <%= sorting_header("purchasease", "updated_at", "") %>
            </th>
            <th colspan="3">
              <label class="checkbox">
                <%= check_box_tag :checkallelt, 'all' %>
                <%= pluralize(@Purchase_scope.count, "purchasease") %>
              </label>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @Purchases.each do |Purchase| %>
          <tr class="line-<%= cycle("1","2") %>">
            <td><%= Purchase.id %></td>
            <td><%= check_box_tag "ids[]",Purchase.id, false, :class => 'cbbatch' %></td>
              <td <%= visible_column("purchasease", "name") %> class="col-name <%= align_attribute("string") %>">
      <%= Purchase.name %>
  </td>
  <td <%= visible_column("purchasease", "ordered_on") %> class="col-ordered_on <%= align_attribute("date") %>">
      <%= Purchase.ordered_on %>
  </td>
  <td <%= visible_column("purchasease", "received_on") %> class="col-received_on <%= align_attribute("date") %>">
      <%= Purchase.received_on %>
  </td>
  <td <%= visible_column("purchasease", "bucket") %> class="col-bucket <%= align_attribute("reference") %>">
      <%= Purchase.bucket %>
  </td>
  <td <%= visible_column("purchasease", "supplier") %> class="col-supplier <%= align_attribute("referece") %>">
      <%= Purchase.supplier %>
  </td>
<!-- Beautiful_scaffold - AddField - Column - Do not remove -->
            <td <%= visible_column("purchasease", "created_at") %> class="col-created_at <%= align_attribute("datetime") %>">
              <%= l(Purchase.created_at, :format => :long) %>
            </td>
            <td <%= visible_column("purchasease", "updated_at") %> class="col-updated_at <%= align_attribute("datetime") %>">
              <%= l(Purchase.updated_at, :format => :long) %>
            </td>
            <td><%= link_to '<i class="icon-search"></i>'.html_safe, Purchase_path(Purchase), :title => t(:show, :default => "Show") %></td>
            <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_purchase_path(Purchase), :title => t(:edit, :default => "Edit") %></td>
            <td><%= link_to '<i class="icon-remove"></i>'.html_safe, Purchase_path(Purchase), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="btn-toolbar">
        <div class="btn-group">
          <% clean_params %>
          <%= will_paginate @Purchases,
                  :inner_window => 0,
                  :outer_window => 0,
                  :previous_label => t(:prev, :default => "Previous"),
                  :next_label => t(:next, :default => "Next") %>

        </div>
        <div class="btn-group pull-right">
          <%= link_to '<i class="icon-download"></i> CSV'.html_safe,  purchases_path(:format => :csv), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> XML'.html_safe,  purchases_path(:format => :xml), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> JSON'.html_safe, purchases_path(:format => :json), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> PDF'.html_safe,  purchases_path(:format => :pdf), :class => "btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <%= search_form_for @q, :url => search_purchases_path, :html => { :class => "well well-small" }, :method => :post do |f| %>
        <%= ransack_field("purchasease", "name", f, "Name") %>
  <%= ransack_field("purchasease", "ordered_on", f, "Ordered_on") %>
  <%= ransack_field("purchasease", "received_on", f, "Received_on") %>
  <%= ransack_field("purchasease", "bucket", f, "Bucket") %>
  <%= ransack_field("purchasease", "supplier", f, "Supplier") %>

        <%= ransack_field("purchasease", "created_at", f, "Created At") %>
  <%= ransack_field("purchasease", "updated_at", f, "Updated At") %>
  <%= ransack_field("purchasease", "id", f, "Id") %>

      <!-- Beautiful_scaffold - AddField - Search - Do not remove -->
      <%= f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary" %>
      <%= link_to  t(:cancel, :default => "Cancel"), purchases_path(:nosearch => "ok"), :class => "btn" %>
    <% end %>
  </div>
</div>
