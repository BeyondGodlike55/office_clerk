-if @product.line?
  =render "line"
-elsif @product.line_item?
  %h3
    Item of Product Line 
    = link_to @product.product.name , product_path( @product.product)
    = @product.name
.row
  .medium-6.columns
    .medium-6.columns
      %p
        %b
          = t(:main_picture) + ":"
        %br
        = image_tag @product.main_picture.url
    .medium-6.columns
      %p
        %b
          = t(:extra_picture) + ":"
        %br
        = image_tag @product.extra_picture.url
    .medium-6
      %p
        %b
          = t(:price) + ":"
        = number_to_currency(@product.price)
      %p
        %b
          = t(:cost) + ":"
        = number_to_currency(@product.cost)
      %p
        %b
          = t(:weight) + ":"
        = @product.weight
      %p
        %b
          = t(:inventory) + ":"
        = @product.inventory
    = link_to t(:edit), edit_product_path(@product), :class => "admin-button"
    = link_to t(:back), products_path, :class => "admin-button"
    = link_to t(:delete) , delete_product_path(@product), :class => "admin-button"

  .medium-6.columns
    %p
      %b
        = t(:description) + ":"
      = @product.description
    %p
      %b
        = t(:link) + ":"
      = @product.link
    %p
      %b
        = t(:ean) + ":"
      = @product.ean
    %p
      %b
        = t(:scode) + ":"
      = @product.scode
    %p
      %b
        = t(:tax) + ":"
      = @product.tax
    %p
      %b
        = t(:category) + ":"
      = (@product.category.nil? ? "" : @product.category.caption)
    %p
      %b
        = t(:supplier) + ":"
      = (@product.supplier.nil? ? "" : @product.supplier.name)
