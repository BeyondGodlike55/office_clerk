%h2
  = t(:listing, :default => "Listing")
  = t('app.models.product.bs_caption_plural', :default => 'product')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.product.bs_caption', :default => 'product'), new_product_path, :class => "btn"
.row-fluid
  .span9
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th
              = check_box_tag :checkall, ''
            %th{column_style("product", "price")}
              =sorting_header("product", "price", "")
            %th{column_style("product", "cost")}
              =sorting_header("product", "cost", "")
            %th{column_style("product", "weight")}
              =sorting_header("product", "weight", "")
            %th{column_style("product", "name")}
              =sorting_header("product", "name", "")
            %th{column_style("product", "description")}
              =sorting_header("product", "description", "")
            %th{column_style("product", "url_name")}
              =sorting_header("product", "url_name", "")
            %th{column_style("product", "ean")}
              =sorting_header("product", "ean", "")
            %th{column_style("product", "tax")}
              =sorting_header("product", "tax", "")
            %th{column_style("product", "properties")}
              =sorting_header("product", "properties", "")
            %th{column_style("product", "scode")}
              =sorting_header("product", "scode", "")
            %th{column_style("product", "product")}
              =sorting_header("product", "product_id", "")
            %th{column_style("product", "product_group")}
              =sorting_header("product", "product_group_id", "")
            %th{column_style("product", "supplier")}
              =sorting_header("product", "supplier_id", "")
            %th{:colspan => "3"}
              %label.checkbox
                = check_box_tag :checkallelt, 'all'
                = pluralize(@product_scope.count, "product")
        %tbody
          - @products.each do |product|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= check_box_tag "ids[]",product.id, false, :class => 'cbbatch'
              %td{column_style("product", "price")}
                =number_to_currency(product.price, :locale => I18n.locale)
              %td{column_style("product", "cost")}
                =number_to_currency(product.cost, :locale => I18n.locale)
              %td{column_style("product", "weight")}
                =product.weight
              %td{column_style("product", "name")}
                =product.name
              %td{column_style("product", "description")}
                =product.description
              %td{column_style("product", "url_name")}
                =product.url_name
              %td{column_style("product", "ean")}
                =product.ean
              %td{column_style("product", "tax")}
                =product.tax
              %td{column_style("product", "properties")}
                =product.properties
              %td{column_style("product", "scode")}
                =product.scode
              %td{column_style("product", "product")}
              - if not product.product_id.nil? then
                = link_to product.product.caption, product_path(product.product_id)
              - else
                = t(:any, :default => "Any")
              %td{column_style("product", "product_group")}
              - if not product.product_group_id.nil? then
                = link_to product.product_group.caption, product_group_path(product.product_group_id)
              - else
                = t(:any, :default => "Any")
              %td{column_style("product", "supplier")}
              - if not product.supplier_id.nil? then
                = link_to product.supplier.caption, supplier_path(product.supplier_id)
              - else
                = t(:any, :default => "Any")
              %td= link_to '<i class="icon-search"></i>'.html_safe, product_path(product), :title => t(:show, :default => "Show")
              %td= link_to '<i class="icon-pencil"></i>'.html_safe, edit_product_path(product), :title => t(:edit, :default => "Edit")
              %td= link_to '<i class="icon-remove"></i>'.html_safe, product_path(product), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy")
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @products,                             |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev), |
            :next_label => t(:next)          |
        .btn-group.pull-right
          = link_to products_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV
          = link_to products_path(:format => :json), :class => "btn" do
            %i.icon-download JSON 
  .span3
    = search_form_for @q, :url => search_products_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("product", "price", f, "Price")
      = ransack_field("product", "cost", f, "Cost")
      = ransack_field("product", "weight", f, "Weight")
      = ransack_field("product", "name", f, "Name")
      = ransack_field("product", "description", f, "Description")
      = ransack_field("product", "url_name", f, "Url name")
      = ransack_field("product", "ean", f, "Ean")
      = ransack_field("product", "tax", f, "Tax")
      = ransack_field("product", "properties", f, "Properties")
      = ransack_field("product", "scode", f, "Scode")
      = ransack_field("product", "product_id", f, "Product")
      = ransack_field("product", "product_group_id", f, "Product_group")
      = ransack_field("product", "supplier_id", f, "Supplier")
      = ransack_field("product", "id", f, "Id")
      = f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary"
      = link_to  t(:cancel, :default => "Cancel"), products_path(:nosearch => "ok"), :class => "btn"
