%h2
  = t(:treeview, :default => 'Treeview')
  = t('app.models.product.bs_caption', :default => 'product')
- namespace_for_url = ""
- plural_model_name = "products"
- model_name        = "product"
- opened_node       = Product.select(:id).all.map{ |g| "'treeelt_" + g.id.to_s + "'" }.join(',').html_safe
#treeview{"data-model" => model_name, "data-opened" => "[#{opened_node}]", "data-url" => "/#{namespace_for_url}#{plural_model_name}/"}
  %ul
    - Product.transaction do
      - ar = Product.where(:product_id => nil)
      - ar = ar.order("position") if Product.column_names.include?("position")
      - for g in ar.all
        = build_treeview(g, 'products')
