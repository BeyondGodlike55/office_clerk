<h2><%= t(:listing, :default => "Listing") %> <%= t('app.models.product.bs_caption_plural', :default => 'product') %></h2>

<p>
  <%= link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.product.bs_caption', :default => 'product'), new_product_path, :class => "btn" %>
  <% if Product.columns.map(&:name).include?("product_id") then %>
    <%= link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.product.bs_caption', :default => 'product'), treeview_products_path, :class => "btn" %>
  <% end %>
</p>

<%= render :partial => "layouts/mass_inserting", :locals => { :namespace => '', :model_name => 'product', :model_columns => ['price','cost','weight','name','description','slug','ean','tax','attributes','scode','product','product_group','supplier'] } %>

<%# Set your scopes below (string in array) %>
<% scopes = [] %>
<% if not scopes.blank? then %>
<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "All (#{@product_scope_for_scope.count})", products_path(:scope => ""), :class => "btn #{((session[:scope][:product].to_s == '') ? 'active' : '')}" %>
    <% for scope in scopes %>
    <%= link_to "#{scope} (#{@product_scope_for_scope.send(scope).count})", products_path(:scope => scope), :class => "btn #{((session[:scope][:product].to_s == scope) ? 'active' : '')}" %>
    <% end %>
  </div>
</div>
<% end %>

