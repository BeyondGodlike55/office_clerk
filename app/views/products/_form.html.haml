%div
  = form_for(@product, :html => { :multipart => true , :class => "form-horizontal" }) do |f|
    = f.hidden_field( :product_id) if @product.product_id
    .col-md-6
      .controls
        = f.check_box :online
      .controls
        = f.text_field :name
      .controls
        = f.text_area :description, :rows => 10 , :cols => 40
      .controls
        = f.collection_select :supplier_id, Supplier.all, :id, :supplier_name, :include_blank => true
      .controls
        = f.collection_select :category_id, Category.all, :id, :name, :include_blank => true
      .col-md-6
        .controls
          = image_tag @product.main_picture.url(:thumb)
          = f.file_field :main_picture , :label => t(:main_picture)
      .col-md-6
        .control-group
          = image_tag @product.extra_picture.url(:product)
          = f.file_field :extra_picture , :label => t(:extra_picture)
      .form-actions
        = f.submit :class => "btn btn-success"
        -if @product.product_id
          = link_to t(:cancel), product_path(@product.product), :class => "btn btn-primary"
        -else
          = link_to t(:cancel), products_path, :class => "btn btn-primary"

    .col-md-3
      - unless @product.product_id
        .controls
          = f.text_field :link
      .controls
        = f.text_field :price
      .controls
        = f.text_field :weight
      .controls
        = f.text_field :ean
      .controls
        = f.text_field :tax
      .controls
        = f.text_field :scode
