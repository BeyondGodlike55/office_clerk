%h2
  = t(:listing, :default => "Listing")
  = t('app.models.basket.bs_caption_plural', :default => 'basket')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.basket.bs_caption', :default => 'basket'), new_basket_path, :class => "btn"
  - if Basket.columns.map(&:name).include?("basket_id") then
    = link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.basket.bs_caption', :default => 'basket'), treeview_baskets_path, :class => "btn"
.row-fluid
  .span9
    = form_tag  batch_baskets_path, :class => "form-inline" do
      .well.well-small
        %label.control-label{:for => "select01"}= t(:batch, :default => "Batch")
        %select#select01{:name => "actionprocess"}
          %option{:value => "destroy"}= t(:destroy, :default => "Destroy")
        %button.btn{:type => "submit"}
          %i.icon-ok
          = t(:process, :default => "Process")
      = render :partial => "layouts/modal_columns", :locals => { :model_name => "basket", :model_columns => ['string'] }
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th
              %a{"data-toggle" => "modal", :href => "#modal-columns", :title => t(:select_columns, :default => "Select Columns")}
                %i.icon-th-list
            %th
              = check_box_tag :checkall, ''
            %th{visible_column("basket", "string")}
              =sorting_header("basket", "string", "")
            %th{:colspan => "3"}
              %label.checkbox
                = check_box_tag :checkallelt, 'all'
                = pluralize(@basket_scope.count, "basket")
        %tbody
          - @baskets.each do |basket|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= basket.id
              %td= check_box_tag "ids[]",basket.id, false, :class => 'cbbatch'
              %td{visible_column("basket", "string")}
                =basket.string
              %td= link_to '<i class="icon-search"></i>'.html_safe, basket_path(basket), :title => t(:show, :default => "Show")
              %td= link_to '<i class="icon-pencil"></i>'.html_safe, edit_basket_path(basket), :title => t(:edit, :default => "Edit")
              %td= link_to '<i class="icon-remove"></i>'.html_safe, basket_path(basket), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy")
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @baskets,                              |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev), |
            :next_label => t(:next)          |
        .btn-group.pull-right
          = link_to baskets_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV 
          = link_to baskets_path(:format => :json), :class => "btn" do
            %i.icon-download JSON 
  .span3
    = search_form_for @q, :url => search_baskets_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("basket", "name", f, "String")
      = ransack_field("basket", "id", f, "Id")
      = f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary"
      = link_to  t(:cancel, :default => "Cancel"), baskets_path(:nosearch => "ok"), :class => "btn"
