.row
  .large-9.column
    .row
      .large-8.column
        %h2
          = t(:baskets)
      .large-4.column
        = link_to  t(:new) + ' ' + t(:basket) , new_basket_path , :class => "admin-button"
    .row
      %p
      = paginate @baskets
  .large-3.column
    = image_tag "admin/baskets.jpg"
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th= sort_link @q, :created_at
            %th= sort_link @q, :total_price
            %th= t(:items)
            %th
              %label.checkbox
                = @basket_scope.count.to_s + " " + t("baskets")
        %tbody
          - @baskets.each do |basket|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td
                =basket.created_at.to_date.to_s
              %td
                = euros basket.total_price
              %td
                - basket.items.each do |item| #should break at 5 and do the rest as tooltip
                  = item.quantity
                  x
                  = item.name
                  %br
              %td= basket_edit_link(basket)
  .medium-3.columns
    = search_form_for @q, :url => search_baskets_path, :html => { :class => "well well-small" }, :method => :post do |f|
      .search_heading= t(:type)
      = f.select :kori_type_eq, [["",""] , [t(:order) , "Order"] , [t(:purchase),"Purchase"]]
      .search_heading= t(:items)
      = f.text_field :items_product_name_cont ,  :title => t(:name_contains)
      .search_heading= t(:price_between)
      = f.text_field :total_price_gt , :class => "ffff"
      = f.text_field :total_price_lt
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), baskets_path, :class => "admin-button"
