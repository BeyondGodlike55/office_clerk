%h2
  = t(:baskets)
%p
  = link_to new_basket_path, :class => "btn" do
    %i.icon-plus
    = t(:new) + ' ' + t(:basket)
.row-fluid
  .span9
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("basket", "string")}
              =sorting_header("basket", "string", "")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@basket_scope.count, "basket")
        %tbody
          - @baskets.each do |basket|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("basket", "string")}
                =basket.name.to_s
              %td
                = link_to basket_path(basket), :title => t(:show) do
                  %i.icon-search
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @baskets,                              |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev), |
            :next_label => t(:next)          |
        .btn-group.pull-right
          = link_to baskets_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV 
          = link_to baskets_path(:format => :json), :class => "btn" do
            %i.icon-download JSON 
  .span3
    = search_form_for @q, :url => search_baskets_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("basket", "name", f, "String")
      = f.submit t(:filter), :class => "btn btn-primary"
      = link_to  t(:cancel), baskets_path, :class => :btn
