.medium-12.columns
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th= t(:picture)
        %th= t(:name)
        %th= t(:quantity)
        %th= t(:price)
    %tbody
      - basket.items.each do |item|
        %tr{:class => "line-#{cycle("1","2")}"}
          %td= image_tag item.product.main_picture.url if item.product
          %td=link_to_if item.product, item.product.name , product_path(item.product)
          %td= item.quantity
          %td= euros item.price
      %tr
        %td{:colspan => 2}
          %b
            = link_to t(:edit) , basket_path(basket) , :class => "admin-button"
        %td 
          = t(:quantity)
          = basket.quantity
        %td 
          = t(:total)
          = euros basket.total_price
