= form_tag edit_basket_path(@basket) , :method => :get do |f|
  %p
    = label_tag @basket.name
    = text_field_tag :ean
    ______________
    - if@basket.isa :cart 
      = link_to t(:make_order), order_basket_path(@basket), :class => "btn"
  %div
    - if @basket.errors.any?
      #error_explanation
        %h2
          = pluralize(@category.errors.count, "error")
          prohibited this category from being saved:
        %ul
          - @category.errors.full_messages.each do |msg|
            %li= msg

= form_for(@basket) do |f|
  %table.table.table-striped.table-bordered.table-condensed
    %thead
      %tr
        %th= t(:picture)
        %th= t(:name)
        %th= t(:quantity)
        %th= t(:price)
        %th{:colspan => "3"}= t(:actions)
    %tbody
      - @basket.items.each do |item|
        %tr{:class => "line-#{cycle("1","2")}"}
          %td= image_tag item.product.main_picture.url if item.product
          %td= item.product.name if item.product
          = f.simple_fields_for :items , item do |iform|
            %td= iform.text_field :quantity
            %td= iform.text_field :price
      %tr
        %td{:colspan => 3}
        %td 
          = t(:tax)
          = @basket.total_tax
          _________
          = t(:total)
          = @basket.total_price

            
  .form-actions
    = f.submit :class => "btn btn-primary"
    ____________________
    - if@basket.isa :cart 
      = link_to t(:back), baskets_path, :class => "btn"
    - else
      = link_to t(:to_order), order_path(@basket.order), :class => "btn"
      
    = link_to t(:destroy) , basket_path(@basket), :data => { :confirm => t(:are_you_sure )}, :method => :delete, :title => t(:destroy) , :class => "btn"
