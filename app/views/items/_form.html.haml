= form_for(@item, :html => { :class => "form-horizontal" }) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :quantity, t(:quantity), :class => "control-label"
    .controls
      = f.number_field :quantity
  .control-group
    = f.label :price, t('app.models.item.bs_attributes.price', :default => 'price').capitalize, :class => "control-label"
    .controls
      .input-prepend
        %span.add-on â‚¬
        = f.text_field :price
  .control-group
    = f.label :tax, t('app.models.item.bs_attributes.tax', :default => 'tax').capitalize, :class => "control-label"
    .controls
      = f.text_field :tax
  .control-group
    = f.label :product, t('app.models.item.bs_attributes.product', :default => 'product').capitalize, :class => "control-label"
    .controls
      = f.text_field :product_id
  .control-group
    = f.label :bucket, t('app.models.item.bs_attributes.bucket', :default => 'bucket').capitalize, :class => "control-label"
    .controls
      = f.text_field :bucket
  / Beautiful_scaffold - AddField - Do not remove
  .form-actions
    = f.submit :class => "btn btn-primary"
