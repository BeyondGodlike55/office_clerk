%h2
  = t(:listing, :default => "Listing")
  = t('app.models.item.bs_caption_plural', :default => 'item')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.item.bs_caption', :default => 'item'), new_item_path, :class => "btn"
  - if Item.columns.map(&:name).include?("item_id") then
    = link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.item.bs_caption', :default => 'item'), treeview_items_path, :class => "btn"
.row-fluid
  .span9
    = form_tag  batch_items_path, :class => "form-inline" do
      .well.well-small
        %label.control-label{:for => "select01"}= t(:batch, :default => "Batch")
        %select#select01{:name => "actionprocess"}
          %option{:value => "destroy"}= t(:destroy, :default => "Destroy")
        %button.btn{:type => "submit"}
          %i.icon-ok
          = t(:process, :default => "Process")
      = render :partial => "layouts/modal_columns", :locals => { :model_name => "item", :model_columns => ['bucket_id','quantity','price','tax','product'] }
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th
              %a{"data-toggle" => "modal", :href => "#modal-columns", :title => t(:select_columns, :default => "Select Columns")}
                %i.icon-th-list
            %th
              = check_box_tag :checkall, ''
            %th{visible_column("item", "quantity")}
              =sorting_header("item", "quantity", "")
            %th{visible_column("item", "price")}
              =sorting_header("item", "price", "")
            %th{visible_column("item", "tax")}
              =sorting_header("item", "tax", "")
            %th{visible_column("item", "product")}
              =sorting_header("item", "product", "")
            %th{visible_column("item", "bucket")}
              =sorting_header("item", "bucket", "")
            %th{:colspan => "3"}
              %label.checkbox
                = check_box_tag :checkallelt, 'all'
                = pluralize(@item_scope.count, "item")
        %tbody
          - @items.each do |item|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= item.id
              %td= check_box_tag "ids[]",item.id, false, :class => 'cbbatch'
              %td{visible_column("item", "quantity")}
                =item.quantity
              %td{visible_column("item", "price")}
                =number_to_currency(item.price, :locale => I18n.locale)
              %td{visible_column("item", "tax")}
                =item.tax
              %td{visible_column("item", "product")}
                =item.product
              %td{visible_column("item", "bucket")}
                =item.bucket
              %td= link_to '<i class="icon-search"></i>'.html_safe, item_path(item), :title => t(:show, :default => "Show")
              %td= link_to '<i class="icon-pencil"></i>'.html_safe, edit_item_path(item), :title => t(:edit, :default => "Edit")
              %td= link_to '<i class="icon-remove"></i>'.html_safe, item_path(item), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy")
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @items,                                |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev), |
            :next_label => t(:next)          |
        .btn-group.pull-right
          = link_to items_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV 
  .span3
    = search_form_for @q, :url => search_items_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("item", "quantity", f, "Quantity")
      = ransack_field("item", "price", f, "Price")
      = ransack_field("item", "tax", f, "Tax")
      = ransack_field("item", "product_id", f, "Product")
      = ransack_field("item", "id", f, "Id")
      = ransack_field("item", "bucket_id", f, "Bucket")
      = f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary"
      = link_to  t(:cancel, :default => "Cancel"), items_path(:nosearch => "ok"), :class => "btn"
