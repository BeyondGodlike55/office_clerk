%h2
  = t(:listing, :default => "Listing")
  = t('app.models.purchase.bs_caption_plural', :default => 'purchase')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.purchase.bs_caption', :default => 'purchase'), new_purchase_path, :class => "btn"
  - if Purchase.columns.map(&:name).include?("purchase_id") then
    = link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.purchase.bs_caption', :default => 'purchase'), treeview_purchases_path, :class => "btn"
- scopes = []
- if not scopes.blank? then
  .btn-toolbar
    .btn-group
      = link_to "All (#{@purchase_scope_for_scope.count})", purchases_path(:scope => ""), :class => "btn #{((session[:scope][:purchase].to_s == '') ? 'active' : '')}"
      - for scope in scopes
        = link_to "#{scope} (#{@purchase_scope_for_scope.send(scope).count})", purchases_path(:scope => scope), :class => "btn #{((session[:scope][:purchase].to_s == scope) ? 'active' : '')}"
.row-fluid
  .span9
    = form_tag  batch_purchases_path, :class => "form-inline" do
      .well.well-small
        %label.control-label{:for => "select01"}= t(:batch, :default => "Batch")
        %select#select01{:name => "actionprocess"}
          %option{:value => "destroy"}= t(:destroy, :default => "Destroy")
          / Beautiful_scaffold - AddField - Batch - Do not remove
        %button.btn{:type => "submit"}
          %i.icon-ok
          = t(:process, :default => "Process")
      = render :partial => "layouts/modal_columns", :locals => { :model_name => "purchase", :model_columns => ['name','ordered_on','received_on','bucket','supplier','created_at','updated_at'] }
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th
              %a{"data-toggle" => "modal", :href => "#modal-columns", :title => t(:select_columns, :default => "Select Columns")}
                %i.icon-th-list
            %th
              = check_box_tag :checkall, ''
            <th #{visible_column("purchase", "name")} class="col-name">
            \#{sorting_header("purchase", "name", "")}
            <th #{visible_column("purchase", "ordered_on")} class="col-ordered_on">
            \#{sorting_header("purchase", "ordered_on", "")}
            <th #{visible_column("purchase", "received_on")} class="col-received_on">
            \#{sorting_header("purchase", "received_on", "")}
            <th #{visible_column("purchase", "bucket")} class="col-bucket">
            \#{sorting_header("purchase", "bucket_id", "")}
            <th #{visible_column("purchase", "supplier")} class="col-supplier">
            \#{sorting_header("purchase", "supplier", "")}
            / Beautiful_scaffold - AddField - Header - Do not remove
            <th #{visible_column("purchase", "created_at")} class="col-created_at">
            \#{sorting_header("purchase", "created_at", "")}
            <th #{visible_column("purchase", "updated_at")} class="col-updated_at">
            \#{sorting_header("purchase", "updated_at", "")}
            %th{:colspan => "3"}
              %label.checkbox
                = check_box_tag :checkallelt, 'all'
                = pluralize(@purchase_scope.count, "purchase")
        %tbody
          - @purchases.each do |purchase|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= purchase.id
              %td= check_box_tag "ids[]",purchase.id, false, :class => 'cbbatch'
              <td #{visible_column("purchase", "name")} class="col-name #{align_attribute("string")}">
              \#{purchase.name}
              <td #{visible_column("purchase", "ordered_on")} class="col-ordered_on #{align_attribute("date")}">
              \#{purchase.ordered_on}
              <td #{visible_column("purchase", "received_on")} class="col-received_on #{align_attribute("date")}">
              \#{purchase.received_on}
              <td #{visible_column("purchase", "bucket")} class="col-bucket #{align_attribute("references")}">
              - if not purchase.bucket_id.nil? then
                = link_to purchase.bucket.caption, bucket_path(purchase.bucket_id)
              - else
                = t(:any, :default => "Any")
              <td #{visible_column("purchase", "supplier")} class="col-supplier #{align_attribute("references")}">
              \#{purchase.supplier}
              / Beautiful_scaffold - AddField - Column - Do not remove
              <td #{visible_column("purchase", "created_at")} class="col-created_at #{align_attribute("datetime")}">
              \#{l(purchase.created_at, :format => :long)}
              <td #{visible_column("purchase", "updated_at")} class="col-updated_at #{align_attribute("datetime")}">
              \#{l(purchase.updated_at, :format => :long)}
              %td= link_to '<i class="icon-search"></i>'.html_safe, purchase_path(purchase), :title => t(:show, :default => "Show")
              %td= link_to '<i class="icon-pencil"></i>'.html_safe, edit_purchase_path(purchase), :title => t(:edit, :default => "Edit")
              %td= link_to '<i class="icon-remove"></i>'.html_safe, purchase_path(purchase), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy")
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @purchases,                            |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev, :default => "Previous"), |
            :next_label => t(:next, :default => "Next")          |
        .btn-group.pull-right
          = link_to '<i class="icon-download"></i> CSV'.html_safe,  purchases_path(:format => :csv), :class => "btn"
          = link_to '<i class="icon-download"></i> XML'.html_safe,  purchases_path(:format => :xml), :class => "btn"
          = link_to '<i class="icon-download"></i> JSON'.html_safe, purchases_path(:format => :json), :class => "btn"
          = link_to '<i class="icon-download"></i> PDF'.html_safe,  purchases_path(:format => :pdf), :class => "btn"
  .span3
    = search_form_for @q, :url => search_purchases_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("purchase", "name", f, "Name")
      = ransack_field("purchase", "ordered_on", f, "Ordered_on")
      = ransack_field("purchase", "received_on", f, "Received_on")
      = ransack_field("purchase", "bucket_id", f, "Bucket")
      = ransack_field("purchase", "supplier_id", f, "Supplier")
      = ransack_field("purchase", "created_at", f, "Created At")
      = ransack_field("purchase", "updated_at", f, "Updated At")
      = ransack_field("purchase", "id", f, "Id")
      / Beautiful_scaffold - AddField - Search - Do not remove
      = f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary"
      = link_to  t(:cancel, :default => "Cancel"), purchases_path(:nosearch => "ok"), :class => "btn"
