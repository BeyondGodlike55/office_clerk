%h2
  = t(:purchases)
%p
  = link_to t(:new) + ' ' + t(:purchase), new_purchase_path, :class => "admin-button"
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("purchase", "name")}
              =sorting_header("purchase", "name", "")
            %th{column_style("purchase", "ordered_on")}
              =sorting_header("purchase", "ordered_on", "")
            %th{column_style("purchase", "received_on")}
              =sorting_header("purchase", "received_on", "")
            %th{column_style("purchase", "basket")}
              =sorting_header("purchase", "basket_id", "")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@purchase_scope.count, "purchase")
        %tbody
          - @purchases.each do |purchase|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("purchase", "name")}
                =purchase.name
              %td{column_style("purchase", "ordered_on")}
                =purchase.ordered_on
              %td{column_style("purchase", "received_on")}
                =purchase.received_on
              %td{column_style("purchase", "basket")}
                - if not purchase.basket_id.nil? then
                  = link_to purchase.basket.name, basket_path(purchase.basket_id)
              %td= link_to t(:show) , purchase_path(purchase), :title => t(:show)
              %td= link_to t(:edit) , edit_purchase_path(purchase), :title => t(:edit)
              %td= link_to t(:destroy) ,purchase_path(purchase), :data => { :confirm => t(:are_you_sure)}, :method => :delete, :title => t(:destroy)
      .btn-toolbar
        .btn-group
          - clean_params
          = paginate @purchases
  .medium-3.columns
    = search_form_for @q, :url => search_purchases_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = f.facet_for("name")
      = f.facet_for("ordered_on")
      = f.facet_for("received_on")
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), purchases_path, :class => "admin-button"
