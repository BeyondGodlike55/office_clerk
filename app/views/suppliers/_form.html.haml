= simple_form_for(@supplier) do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2
        = pluralize(@supplier.errors.count, "error")
        prohibited this supplier from being saved:
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :name, t(:name), :class => "control-label"
    .controls
      = f.text_field :name
  = f.simple_fields_for @address do |af|
    =render "addresses/form_fields" ,:f => af
  .form-actions
    = f.submit :class => "btn btn-primary"
    