= form_for(@supplier) do |f|
  - if @supplier.errors.any?
    #error_explanation
      %h2
        = pluralize(@supplier.errors.count, "error")
        prohibited this supplier from being saved:
      %ul
        - @supplier.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :name, t(:name), :class => "control-label"
    .controls
      = f.text_field :name
  = render "addresses/form_fields" ,:f => f
  .form-actions
    = f.submit :class => "submit-button"
    