.row
  .col-lg-9
    .row
      .col-lg-10
        %h2
          = t(:suppliers)
      .col-lg-2
        = link_to  t(:new) + ' ' + t(:supplier) , new_supplier_path , :class => "btn btn-primary"
    .row
      %p
        = paginate @suppliers
  .col-lg-3
    = image_tag "admin/suppliers.jpg" , :class => "img-responsive"
.row
  .col-md-9
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("supplier", "name")}
              =sort_link @q,  :supplier_name
            %th{column_style("supplier", "address")}
              =t :address
            %th{:colspan => "2"}
              %label.checkbox
                = @supplier_scope.count.to_s + " " + t(:suppliers)
        %tbody
          - @suppliers.each do |supplier|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td
                =supplier.supplier_name
              %td{column_style("supplier", "address_last_name")}
                =supplier.whole_address
              %td= link_to t(:show) , supplier_path(supplier), :title => t(:show)
              %td= link_to t(:edit) , edit_supplier_path(supplier), :title => t(:edit)
  .col-md-3
    = search_form_for @q, :url => search_suppliers_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = f.facet_for("supplier_name" , :label => t(:name))
      = f.facet_for("address" , :label => t(:address))
      = f.submit t(:filter), :class => "btn btn-success"
      = link_to  t(:cancel), suppliers_path, :class => "btn btn-primary"
