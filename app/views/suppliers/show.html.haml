%h2
  = t(:show, :default => "Show")
  = t(:supplier)
%p
  %b
    = t(:name) + ":" +  @supplier.name
%p
  %b
    = t(:first_name) + ":" + @address.first_name
%p
  %b
    = t(:last_name) + ":" +  @address.last_name
%p
  %b
    = t(:street1) + ":" +  @address.street1
%p
  %b
    = t(:street2) + ":" +  @address.street2
%p
  %b
    = t(:postcode) + ":" + @address.postcode
%p
  %b
    = t(:country) + ":" + @address.country
= link_to t(:edit), edit_supplier_path(@supplier), :class => "btn"
= link_to t(:back), suppliers_path, :class => "btn"
