= form_for(@category, :html => { :multipart => true , :class => "form-horizontal" }) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :category, t(:category), :class => "control-label"
    .controls
      = f.collection_select(:category_id, Category.all, :id, :name, :prompt => 'Select')
  .control-group
    = f.label :name, t(:name), :class => "control-label"
    .controls
      = f.text_field :name
  .control-group
    = f.label :description, t(:description), :class => "control-label"
    .controls
      = f.text_field :description
  .control-group
    = f.label :position, t(:position), :class => "control-label"
    .controls
      = f.text_field :position
  .control-group
    = f.label :link, t(:link), :class => "control-label"
    .controls
      = f.text_field :link
  .control-group
    = f.label :picture, t(:picture), :class => "control-label"
    = image_tag @category.main_picture.url
    .controls
      = f.file_field :main_picture
  .control-group
    = f.label :picture, t(:picture), :class => "control-label"
    = image_tag @category.extra_picture.url
    .controls
      = f.file_field :extra_picture
  .form-actions
    = f.submit :class => "btn btn-primary"
