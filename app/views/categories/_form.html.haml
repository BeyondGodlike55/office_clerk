= form_for(@category, :html => { :multipart => true , :class => "form-horizontal" }) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :category, t(:category), :class => "control-label"
    .controls
      = f.collection_select(:category_id, Category.all, :id, :name, :prompt => 'Select')
    .controls
      = f.text_field :name
    .controls
      = f.text_field :description
    .controls
      = f.text_field :position
    .controls
      = f.text_field :link
    = image_tag @category.main_picture.url
    .controls
      = f.file_field :main_picture
    = image_tag @category.extra_picture.url
    .controls
      = f.file_field :extra_picture
  .form-actions
    = f.submit :class => "submit-button"
