%h2
  = t(:categories)
%p
  = link_to new_category_path , :class => "btn" do
    %i.icon-plus=  t( :new) + " " + t(:category)
.row-fluid
  .span9
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("category", "main_picture")}=t( "picture")
            %th{column_style("category", "name")}
              =sorting_header("category", "name", "")
            %th{column_style("category", "link")}
              =sorting_header("category", "link", "")
            %th{column_style("category", "category_id")}=t( "parent")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@category_scope.count, "category")
        %tbody
          - @categories.each do |category|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("category", "picture")}
                = image_tag category.main_picture.url
                = image_tag category.extra_picture.url
              %td{column_style("category", "name")}
                =category.name
              %td{column_style("category", "link")}
                =category.link
              %td{column_style("category", "category_id")}
                = Category.find(category.category_id).name if category.category_id 
              %td 
                =link_to category_path(category), :title => t(:show) do 
                  %i.icon-search
              %td
                = link_to edit_category_path(category), :title => t(:edit) do
                  %i.icon-pencil
              %td
                =link_to category_path(category), :data => { :confirm => t(:are_you_sure) }, :method => :delete, :title => t(:destroy) do
                  %i.icon-remove
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @categories,                       |
            :inner_window => 0,                                  |
            :outer_window => 0,                                  |
            :previous_label => t(:prev), |
            :next_label => t(:next)          |
        .btn-group.pull-right
          = link_to categories_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV
          = link_to categories_path(:format => :json), :class => "btn" do
            %i.icon-download JSON
  .span3
    = search_form_for @q, :url => search_categories_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("category", "name", f, "Name")
      = ransack_field("category", "description", f, "Description")
      = f.submit t(:filter), :class => "btn btn-primary"
      = link_to  t(:cancel), categories_path(:filter => "ok"), :class => "btn"
    %hr
    - Category.where(:category_id => nil).each do |group|
      = render "treeview" , :group => group
