.row
  .large-9.column
    .row
      .large-8.column
        %h2
          = t(:categories)
      .large-4.column
        = link_to  t(:new) + ' ' + t(:category) , new_category_path , :class => "admin-button"
    .row
      %p
        = paginate @categories
  .large-3.column
    = image_tag "admin/categories.jpg"
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th=t( "picture")
            %th= sort_link @q, :name
            %th= t(:count)
            %th= t(:online)
            %th{column_style("category", "category_id")}=t( "parent")
            %th{:colspan => "3"}
              %label.checkbox
                = @category_scope.count.to_s + " " +t(:categories)
        %tbody
          - @categories.each do |category|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= image_tag category.main_picture.url(:thumb)
              %td=link_to category.name, category_path(category), :title => t(:show)
              %td=category.products.count.to_s
              %td=category.online ? t(:online) : t(:not_online)
              %td= Category.find(category.category_id).name if category.category_id
              %td= link_to t(:edit), edit_category_path(category), :title => t(:edit)
              %td= link_to t(:destroy), category_path(category), :data => { :confirm => t(:are_you_sure) }, :method => :delete, :title => t(:destroy)
  .medium-3.columns
    = search_form_for @q, :url => search_categories_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = f.facet_for(:name , :label => t(:name))
      = f.facet_for(:description , :label => t(:description))
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), categories_path, :class => "admin-button"
    %hr
    - Category.where(:category_id => nil).each do |group|
      = render "treeview" , :group => group
