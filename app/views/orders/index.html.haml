%h2
  = t(:orders)
%p
  = paginate @orders
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th= sort_link @q, :number
            %th= sort_link @q, :ordered_on
            %th= sort_link @q, :basket_total_price
            %th= sort_link @q, :email
            %th= t(:state)
            %th= @order_scope.count.to_s + " " + t(:orders)
        %tbody
          - @orders.each do |order|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td= order.number.to_s
              %td= order.ordered_on
              %td= euros(order.basket.total_price) if order.basket
              %td= order.email
              %td= order.paid_on
              %td= link_to t(:show) , order_path(order), :title => t(:show)
      .btn-toolbar
        .btn-group
          = paginate @orders
        .btn-group.pull-right
          = link_to orders_path(:format => :csv), :class => "admin-button" do
            %i.icon-download CSV
          = link_to orders_path(:format => :json), :class => "admin-button" do
            %i.icon-download JSON
  .medium-3.columns
    = search_form_for @q, :url => search_orders_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = f.label t(:order_number)
      = f.text_field :number_cont
      = f.label t(:total) + t(:between)
      = f.text_field :basket_total_price_lteq
      = f.text_field :basket_total_price_gteq
      = f.facet_for(:email , :label => t(:email))
      = f.label t(:ordered_on) + " " + t(:between)
      = f.date_field :ordered_on_gteq
      = f.date_field :ordered_on_lteq
      = f.label t(:paid_on) + " " + t(:between)
      = f.date_field :paid_on_gteq
      = f.date_field :paid_on_lteq
      = f.label t(:shipped_on) + " " + t(:between)
      = f.date_field :shipped_on_gteq
      = f.date_field :shipped_on_lteq
      = f.label t(:canceled_on) + " " + t(:between)
      = f.date_field :canceled_on_gteq
      = f.date_field :canceled_on_lteq
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), orders_path, :class => "admin-button"
