%h2
  = t(:orders)
%p
  .btn-toolbar
    = link_to new_order_path , :class => "btn" do
      %i.icon-plus=  t( :new) + " " + t(:order)
    .btn-group
      - clean_params
      = paginate @orders
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{ column_style("order", "ordered_on") }
              = sorting_header("order", "ordered_on", "")
            %th{column_style("order", "total_price")}
              = sorting_header("order", "total_price", "")
            %th{column_style("order", "email")}
              = sorting_header("order", "email", "")
            %th{column_style("order", "state")}
              = sorting_header("order", "state", "")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@order_scope.count, "order")
        %tbody
          - @orders.each do |order|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("order", "ordered_on")}
                = order.ordered_on
              %td{column_style("order", "total_price")} 
                = number_to_currency(order.basket.total_price)
              %td{column_style("order", "email")}
                = order.email
              %td{column_style("order", "status")}
                = order.paid_on
              %td
                = link_to order_path(order), :title => t(:show, :default => "Show") do
                  %i.icon-search
              %td
                = link_to edit_order_path(order), :title => t(:edit) do 
                  %i.icon-pencil
              %td
                = link_to order_path(order), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy") do
                  %i.icon-remove
      .btn-toolbar
        .btn-group
          - clean_params
          = paginate @orders
        .btn-group.pull-right
          = link_to orders_path(:format => :csv), :class => "btn" do
            %i.icon-download CSV 
          = link_to orders_path(:format => :json), :class => "btn" do
            %i.icon-download JSON 
  .medium-3.columns
    = search_form_for @q, :url => search_orders_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("order", "ordered_on", f, "Ordered_on")
      = ransack_field("order", "basket_total_price", f, "Total_price")
      = ransack_field("order", "email", f, "Email")
      = ransack_field("order", "paid_on", f, "Paid_on")
      = ransack_field("order", "shipped_on", f, "Shipped_on")
      = ransack_field("order", "paid_on", f, "Paid_on")
      = ransack_field("order", "canceled_on", f, "Canceled_on")
      = f.submit t(:filter), :class => "btn btn-primary"
      = link_to  t(:cancel), orders_path(:filter => "ok"), :class => "btn"
