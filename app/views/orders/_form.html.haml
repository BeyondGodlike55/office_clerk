        = f.text_field :paid_on, :class => "dpicker"
        %span.add-on
          %i.icon-calendar
  .control-group
    = f.label :canceled_on, t('app.models.order.bs_attributes.canceled_on', :default => 'canceled_on').capitalize, :class => "control-label"
