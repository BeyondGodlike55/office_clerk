= form_for(@order, :html => { :class => "form-horizontal" }) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :ordered_on, t('app.models.order.bs_attributes.ordered_on', :default => 'ordered_on').capitalize, :class => "control-label"
    .controls
      .input-append
        %input#order_ordered_on_3i{:name => "order[ordered_on(3i)]", :type => "hidden", :value => begin @order.ordered_on.day rescue "" end}/
        %input#order_ordered_on_2i{:name => "order[ordered_on(2i)]", :type => "hidden", :value => begin @order.ordered_on.mon rescue "" end}/
        %input#order_ordered_on_1i{:name => "order[ordered_on(1i)]", :type => "hidden", :value => begin @order.ordered_on.year rescue "" end}/
        = f.text_field :ordered_on, :class => "dpicker"
        %span.add-on
          %i.icon-calendar
  .control-group
    = f.label :total_price, t('app.models.order.bs_attributes.total_price', :default => 'total_price').capitalize, :class => "control-label"
  .control-group
    = f.label :shipping_price, t('app.models.order.bs_attributes.shipping_price', :default => 'shipping_price').capitalize, :class => "control-label"
    .controls
      .input-prepend
        %span.add-on â‚¬
        = f.text_field :shipping_price
  .control-group
    = f.label :shipping_tax, t('app.models.order.bs_attributes.shipping_tax', :default => 'shipping_tax').capitalize, :class => "control-label"
    .controls
      = f.text_field :shipping_tax
  .control-group
    = f.label :basket, t('app.models.order.bs_attributes.basket', :default => 'basket').capitalize, :class => "control-label"
    .controls
      = f.text_field :basket_id
  .control-group
    = f.label :email, t('app.models.order.bs_attributes.email', :default => 'email').capitalize, :class => "control-label"
    .controls
      = f.text_field :email
  .control-group
    = f.label :paid_on, t('app.models.order.bs_attributes.paid_on', :default => 'paid_on').capitalize, :class => "control-label"
    .controls
      .input-append
