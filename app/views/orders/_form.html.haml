= form_for(@order, :html => { :class => "form-horizontal" }) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  .controls
    = f.date_field :ordered_on
  .controls
    = f.text_field :shipment_price
  .controls
    = f.text_field :shipment_tax
  .controls
    = f.text_field :email
  .controls
    = f.date_field :paid_on
  .controls
    = f.date_field :shipped_on
  .controls
    = f.date_field :paid_on
  .controls
    = f.date_field :canceled_on
  .controls
    = f.text_field :shipment_type
  .form-actions
    = f.submit :class => "btn btn-success"
