        %span.add-on
          %i.icon-calendar
  .control-group
    = f.label :shipped_on, t('app.models.order.bs_attributes.shipped_on', :default => 'shipped_on').capitalize, :class => "control-label"
    .controls
      .input-append
        %input#order_shipped_on_3i{:name => "order[shipped_on(3i)]", :type => "hidden", :value => begin @order.shipped_on.day rescue "" end}/
        %input#order_shipped_on_2i{:name => "order[shipped_on(2i)]", :type => "hidden", :value => begin @order.shipped_on.mon rescue "" end}/
        %input#order_shipped_on_1i{:name => "order[shipped_on(1i)]", :type => "hidden", :value => begin @order.shipped_on.year rescue "" end}/
        = f.text_field :shipped_on, :class => "dpicker"
        %span.add-on
          %i.icon-calendar
  .control-group
    = f.label :paid_on, t('app.models.order.bs_attributes.paid_on', :default => 'paid_on').capitalize, :class => "control-label"
    .controls
      .input-append
        %input#order_paid_on_3i{:name => "order[paid_on(3i)]", :type => "hidden", :value => begin @order.paid_on.day rescue "" end}/
        %input#order_paid_on_2i{:name => "order[paid_on(2i)]", :type => "hidden", :value => begin @order.paid_on.mon rescue "" end}/
