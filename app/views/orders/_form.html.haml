        = f.text_field :canceled_on, :class => "dpicker"
        %span.add-on
          %i.icon-calendar
  .control-group
    = f.label :shipment_type, t('app.models.order.bs_attributes.shipment_type', :default => 'shipment_type').capitalize, :class => "control-label"
    .controls
      = f.text_field :shipment_type
  .form-actions
    = f.submit :class => "btn btn-primary"
