%h2
  = t(:order) + " : " + @order.number.to_s
.col-md-4
  %p
    %b
      = t(:ordered_on) + " : " + @order.ordered_on.to_s
  %p
    %b
      = t(:total_price) + " : " +  euros(@order.basket.total_price)
  %p
    %b
      = t(:total_tax) + " : " + euros(@order.basket.total_tax)
  %p
    %b
      = t(:shipment_price) + " : " + euros(@order.shipment_price)
  %p
    %b
      = t(:email) + " : " + @order.email.to_s
.col-md-4
  %p
    %b
      = t(:paid_on) + " : " + @order.paid_on.to_s
  %p
    %b
      = t(:shipped_on) + " : " + @order.shipped_on.to_s
  %p
    %b
      = t(:canceled_on) + " : " + @order.canceled_on.to_s
  %p
    %b
      = t(:shipment_type) + " : " + @order.shipment_type.to_s

= render "baskets/small" , :basket => @order.basket

.col-md-12{"data-no-turbolink" => true}
  = link_to t(:back), orders_path, :class => "admin-button"
  = link_to t(:print), print_order_path(@order), :class => "admin-button"
  = link_to t(:destroy) , order_path(@order), :data => { :confirm => t(:are_you_sure) }, :method => :delete, :title => t(:destroy) , :class => "admin-button warning"
