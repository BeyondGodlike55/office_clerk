= form_for(@user, :html => { :class => "form-horizontal" }) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :email, t('app.models.user.bs_attributes.email', :default => 'email').capitalize, :class => "control-label"
    .controls
      = f.text_field :email
  .control-group
    = f.label :name, t('app.models.user.bs_attributes.name', :default => 'name').capitalize, :class => "control-label"
    .controls
      = f.text_field :name
  .control-group
    = f.label :address, t('app.models.user.bs_attributes.address', :default => 'address').capitalize, :class => "control-label"
    .controls
      = f.text_field :address
  .form-actions
    = f.submit :class => "btn btn-primary"
