%h2
  = t(:listing, :default => "Listing")
  = t('app.models.user.bs_caption_plural', :default => 'user')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.user.bs_caption', :default => 'user'), new_user_path, :class => "admin-button"
.row
  .medium-9.columns
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("user", "email")}
              =sorting_header("user", "email", "")
            %th{column_style("user", "name")}
              =sorting_header("user", "name", "")
            %th{column_style("user", "address")}
              =sorting_header("user", "address", "")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@user_scope.count, "user")
        %tbody
          - @users.each do |user|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("user", "email")}
                =user.email
              %td{column_style("user", "name")}
                =user.name
              %td{column_style("user", "address")}
                =user.address
              %td= link_to t(:show) , user_path(user), :title => t(:show)
              %td= link_to t(:edit), edit_user_path(user), :title => t(:edit)
              %td= link_to user_path(user), :data => { :confirm => t(:are_you_sure) }, :method => :delete, :title => t(:destroy) do
                  %i.icon-remove
      .btn-toolbar
        .btn-group
          - clean_params
          = paginate @users
  .medium-3.columns
    = search_form_for @q, :url => search_users_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("user", "email", f, "Email")
      = ransack_field("user", "name", f, "Name")
      = f.submit t(:filter), :class => "submit-button"
      = link_to  t(:cancel), users_path(:filter => "ok"), :class => "admin-button"
