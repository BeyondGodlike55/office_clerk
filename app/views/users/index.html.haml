%h2
  = t(:listing, :default => "Listing")
  = t('app.models.user.bs_caption_plural', :default => 'user')
%p
  = link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.user.bs_caption', :default => 'user'), new_user_path, :class => "btn"
.row-fluid
  .span9
    %div
      %table.table.table-striped.table-bordered.table-condensed
        %thead
          %tr
            %th{column_style("user", "email")}
              =sorting_header("user", "email", "")
            %th{column_style("user", "name")}
              =sorting_header("user", "name", "")
            %th{column_style("user", "address")}
              =sorting_header("user", "address", "")
            %th{:colspan => "3"}
              %label.checkbox
                = pluralize(@user_scope.count, "user")
        %tbody
          - @users.each do |user|
            %tr{:class => "line-#{cycle("1","2")}"}
              %td{column_style("user", "email")}
                =user.email
              %td{column_style("user", "name")}
                =user.name
              %td{column_style("user", "address")}
                =user.address
              %td= link_to '%i.icon-search.html_safe, user_path(user), :title => t(:show, :default => "Show")
              %td= link_to %i.icon-pencil edit_user_path(user), :title => t(:edit)
              %td= link_to %i.icon-remove user_path(user), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy")
      .btn-toolbar
        .btn-group
          - clean_params
          = will_paginate @users
  .span3
    = search_form_for @q, :url => search_users_path, :html => { :class => "well well-small" }, :method => :post do |f|
      = ransack_field("user", "email", f, "Email")
      = ransack_field("user", "name", f, "Name")
      = f.submit t(:filter), :class => "btn btn-primary"
      = link_to  t(:cancel), users_path(:filter => "ok"), :class => "btn"
