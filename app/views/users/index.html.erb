<h2><%= t(:listing, :default => "Listing") %> <%= t('app.models.user.bs_caption_plural', :default => 'user') %></h2>

<p>
  <%= link_to '<i class="icon-plus"></i> '.html_safe + t(:new, :default => "New") + ' ' + t('app.models.user.bs_caption', :default => 'user'), new_user_path, :class => "btn" %>
  <% if User.columns.map(&:name).include?("user_id") then %>
    <%= link_to '<i class="icon-folder-close"></i> '.html_safe + t(:treeview, :default => "Treeview") + ' ' + t('app.models.user.bs_caption', :default => 'user'), treeview_users_path, :class => "btn" %>
  <% end %>
</p>

<%= render :partial => "layouts/mass_inserting", :locals => { :namespace => '', :model_name => 'user', :model_columns => ['email','name','address'] } %>

<%# Set your scopes below (string in array) %>
<% scopes = [] %>
<% if not scopes.blank? then %>
<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to "All (#{@user_scope_for_scope.count})", users_path(:scope => ""), :class => "btn #{((session[:scope][:user].to_s == '') ? 'active' : '')}" %>
    <% for scope in scopes %>
    <%= link_to "#{scope} (#{@user_scope_for_scope.send(scope).count})", users_path(:scope => scope), :class => "btn #{((session[:scope][:user].to_s == scope) ? 'active' : '')}" %>
    <% end %>
  </div>
</div>
<% end %>

<div class="row-fluid">
  <div class="span9">
    <%= form_tag  batch_users_path, :class => "form-inline" do %>
      <div class="well well-small">
        <label class="control-label" for="select01"><%= t(:batch, :default => "Batch") %></label>

        <select id="select01" name="actionprocess">
          <option value="destroy"><%= t(:destroy, :default => "Destroy") %></option>
          
          <!-- Beautiful_scaffold - AddField - Batch - Do not remove -->
        </select>
        <button class="btn" type="submit"><i class="icon-ok"></i> <%= t(:process, :default => "Process") %></button>
      </div>

      <%= render :partial => "layouts/modal_columns", :locals => { :model_name => "user", :model_columns => ['email','name','address','created_at','updated_at'] } %>

      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>
              <a class="" data-toggle="modal" href="#modal-columns" title="<%= t(:select_columns, :default => "Select Columns") %>" ><i class="icon-th-list"></i></a>
            </th>
            <th>
              <%= check_box_tag :checkall, '' %>
            </th>
            <th <%= visible_column("user", "email") %> class="col-email">
  <%= sorting_header("user", "email", "") %>
</th>
<th <%= visible_column("user", "name") %> class="col-name">
  <%= sorting_header("user", "name", "") %>
</th>
<th <%= visible_column("user", "address") %> class="col-address">
  <%= sorting_header("user", "address", "") %>
</th>

            <!-- Beautiful_scaffold - AddField - Header - Do not remove -->
            <th <%= visible_column("user", "created_at") %> class="col-created_at">
              <%= sorting_header("user", "created_at", "") %>
            </th>
            <th <%= visible_column("user", "updated_at") %> class="col-updated_at">
              <%= sorting_header("user", "updated_at", "") %>
            </th>
            <th colspan="3">
              <label class="checkbox">
                <%= check_box_tag :checkallelt, 'all' %>
                <%= pluralize(@user_scope.count, "user") %>
              </label>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr class="line-<%= cycle("1","2") %>">
            <td><%= user.id %></td>
            <td><%= check_box_tag "ids[]",user.id, false, :class => 'cbbatch' %></td>
              <td <%= visible_column("user", "email") %> class="col-email <%= align_attribute("string") %>">
      <%= user.email %>
  </td>
  <td <%= visible_column("user", "name") %> class="col-name <%= align_attribute("string") %>">
      <%= user.name %>
  </td>
  <td <%= visible_column("user", "address") %> class="col-address <%= align_attribute("reference") %>">
      <%= user.address %>
  </td>
<!-- Beautiful_scaffold - AddField - Column - Do not remove -->
            <td <%= visible_column("user", "created_at") %> class="col-created_at <%= align_attribute("datetime") %>">
              <%= l(user.created_at, :format => :long) %>
            </td>
            <td <%= visible_column("user", "updated_at") %> class="col-updated_at <%= align_attribute("datetime") %>">
              <%= l(user.updated_at, :format => :long) %>
            </td>
            <td><%= link_to '<i class="icon-search"></i>'.html_safe, user_path(user), :title => t(:show, :default => "Show") %></td>
            <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_user_path(user), :title => t(:edit, :default => "Edit") %></td>
            <td><%= link_to '<i class="icon-remove"></i>'.html_safe, user_path(user), :data => { :confirm => t(:are_you_sure, :default => "Are you sure?") }, :method => :delete, :title => t(:destroy, :default => "Destroy") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="btn-toolbar">
        <div class="btn-group">
          <% clean_params %>
          <%= will_paginate @users,
                  :inner_window => 0,
                  :outer_window => 0,
                  :previous_label => t(:prev, :default => "Previous"),
                  :next_label => t(:next, :default => "Next") %>

        </div>
        <div class="btn-group pull-right">
          <%= link_to '<i class="icon-download"></i> CSV'.html_safe,  users_path(:format => :csv), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> XML'.html_safe,  users_path(:format => :xml), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> JSON'.html_safe, users_path(:format => :json), :class => "btn" %>
          <%= link_to '<i class="icon-download"></i> PDF'.html_safe,  users_path(:format => :pdf), :class => "btn" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <%= search_form_for @q, :url => search_users_path, :html => { :class => "well well-small" }, :method => :post do |f| %>
        <%= ransack_field("user", "email", f, "Email") %>
  <%= ransack_field("user", "name", f, "Name") %>

        <%= ransack_field("user", "created_at", f, "Created At") %>
  <%= ransack_field("user", "updated_at", f, "Updated At") %>
  <%= ransack_field("user", "id", f, "Id") %>

      <!-- Beautiful_scaffold - AddField - Search - Do not remove -->
      <%= f.submit t(:filter, :default => "Filter"), :class => "btn btn-primary" %>
      <%= link_to  t(:cancel, :default => "Cancel"), users_path(:nosearch => "ok"), :class => "btn" %>
    <% end %>
  </div>
</div>
