%h2
  = t(:treeview, :default => 'Treeview')
  = t('app.models.user.bs_caption', :default => 'user')
- namespace_for_url = ""
- plural_model_name = "users"
- model_name        = "user"
- opened_node       = User.select(:id).all.map{ |g| "'treeelt_" + g.id.to_s + "'" }.join(',').html_safe
#treeview{"data-model" => model_name, "data-opened" => "[#{opened_node}]", "data-url" => "/#{namespace_for_url}#{plural_model_name}/"}
  %ul
    - User.transaction do
      - ar = User.where(:user_id => nil)
      - ar = ar.order("position") if User.column_names.include?("position")
      - for g in ar.all
        = build_treeview(g, 'users')
