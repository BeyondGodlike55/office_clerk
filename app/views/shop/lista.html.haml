%div
  %ul#products.inline.product-listing.no-bullet
    -@products.each do |product|
      %li.medium-3.columns
        .product-container
          .product-image
            .square-image
              %a{:href => prod_path( :id => product.link )}
                =image_tag product.main_picture.url
            .product-fact
              %a.info{:href => prod_path( :id => product.link )}
                %h5.product-name
                  = product.name
                  %span.price.selling
                    = product.price
